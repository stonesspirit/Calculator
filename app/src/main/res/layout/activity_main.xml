<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/clear"
                    style="@style/actionButton"
                    android:text="C"
                />

                <TextView
                    android:id="@+id/bckt"
                    style="@style/actionButton"
                    android:text="()"
                />

                <TextView
                    android:id="@+id/unar_minus"
                    style="@style/actionButton"
                    android:text="+/-"
                />

                <TextView
                    android:id="@+id/div"
                    style="@style/actionButton"
                    android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_7"
                style="@style/numberButton"
                android:text="7"
                />

            <TextView
                android:id="@+id/bt_8"
                style="@style/numberButton"
                android:text="8"
                />

            <TextView
                android:id="@+id/bt_9"
                style="@style/numberButton"
                android:text="9"
                />

            <TextView
                android:id="@+id/multiply"
                style="@style/actionButton"
                android:text="*"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_4"
                style="@style/numberButton"
                android:text="4"
                />

            <TextView
                android:id="@+id/bt_5"
                style="@style/numberButton"
                android:text="5"
                />

            <TextView
                android:id="@+id/bt_6"
                style="@style/numberButton"
                android:text="6"
                />

            <TextView
                android:id="@+id/minus"
                style="@style/actionButton"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_1"
                style="@style/numberButton"
                android:text="1"
                />

            <TextView
                android:id="@+id/bt_2"
                style="@style/numberButton"
                android:text="2"
                />

            <TextView
                android:id="@+id/bt_3"
                style="@style/numberButton"
                android:text="3"
                />

            <TextView
                android:id="@+id/plus"
                style="@style/actionButton"
                android:text="+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                style="@style/numberButton"
                android:text="."
                />

            <TextView
                android:id="@+id/bt_0"
                style="@style/numberButton"
                android:text="0"
                />

            <ImageView
                android:id="@+id/back"
                style="@style/numberButton"
                android:src="@drawable/backspace"
                android:text="back"
                android:scaleType="center"
                />

            <TextView
                android:id="@+id/equally"
                style="@style/actionButton"
                android:text="="
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
